#include<stdlib.h>
#define N 30
#define MAX 30

/* Assume that the "fraction" structure contains two members: numerator and denominator
   (both type integer). Write function to reduce the fraction f to lowest terms.     */


typedef struct
{
	int numerator;
	int denominator;
}Fraction;

Fraction x;


Fraction reduce_fraction(Fraction f)
{
	int divider;
	if (f.numerator > f.denominator)
		divider = f.numerator;
	else
		divider = f.denominator;

	while (divider > 0) {
		if (f.numerator%divider == 0 && f.denominator%divider == 0)
			break;
		divider--;
	}

	f.numerator /= divider;
	f.denominator /= divider;

	return f;
}

Fraction add_fract(Fraction f1,Fraction f2)
{

}

int main()
{
	x.numerator = 48;
	x.denominator = 32;
	reduce_fraction(x);
	printf("%d/%d", x.numerator, x.denominator);

	getch();
}
